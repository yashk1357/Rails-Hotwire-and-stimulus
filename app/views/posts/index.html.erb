<%= turbo_stream_from current_company, "posts" %>
<div class="max-w-xl h-full mx-auto p-6">
  <div class="flex flex-col justify-start">
  <%= link_to "Create New Post", new_post_path, data: {turbo_frame: "post_new"}, class: "bg-black hover:bg-slate-600 mb-4 text-white px-6 py-3" %>
  <%= turbo_frame_tag "post_new" %>
  </div>
    <h1 class="font-extrabold text-gray-900 mt-8 mb-6 p-4 text-4xl">All Posts</h1>
    <div class="div grid gap-6">
    <%= turbo_frame_tag "posts" do %>
       <%= render @posts %>
    <% end %>
    </div>
</div>
