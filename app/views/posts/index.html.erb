<div class="max-w-xl h-full mx-auto p-6">
  <div class="flex justify-start">
    <%= link_to "Create New Post", new_post_path, class: "bg-black hover:bg-slate-600 mb-4 text-white px-6 py-3" %>
  </div>
  <h1 class="font-extrabold text-gray-900 mt-8 mb-6 p-4 text-4xl">All Posts</h1>
    <div class="div grid gap-6">
      <% @posts.each do |post| %>
        <%= render 'post', post: post %>
      <% end %>
    </div>
</div>
