    <div class="mb-6 bg-white shadow-lg rounded-lg p-6 border border-gray-200 ">
        <h3 class="text-2xl text-gray-800 font-semibold mb-2"> <%= post.title %></h3>
        <p class="text-gray-700 mb-4"><%= post.body.truncate(50) %></p>
        <h6 class="text-gray-500 text-sm ">Created by <%= post.user.name %></h6>

        <div class="mt-4 flex justify-between">
            <%= link_to "View", post_path(post), class: "bg-slate-600 text-white py-2 px-4 inline hover:bg-black hover:text-white transition" %>
            <%= link_to "Edit Post", edit_post_path(post), class: "bg-green-600 text-white px-4 py-2 inline hover:bg-green-900 hover:text-white transition" %>
            <%= button_to "Delete", post_path(post),method: :delete, class: "bg-red-600 text-white py-2 px-4 hover:bg-red-800 inline transition hover:text-white " %>       
        </div>
    </div>